{{<layout}}

  {{$applicationContent}}
    <h2 class="heading-xlarge">Add a job</h2>

    <ul id="validation-errors">
      {{#errors}}
      <li>{{msg}}</li>
      {{/errors }}
    </ul>

    <form action="/{{accountId}}/jobs/new" method="POST">
      <div class="form-group">
        <label class="form-label" for="job-title">Job title</label>
        <input class="form-control" id="job-title" type="text" name="title" value="{{title}}">
      </div>
      <div class="form-group">
        <label class="form-label" for="job-employer">Employer</label>
        <input class="form-control" id="job-employer" type="text" name="employer" value="{{employer}}">
      </div>

      <fieldset class="form-group">
        <legend>Where did you find out about this job?</legend>

        {{#sourceTypeOptions}}
        <label class="block-label" for="job-sourceType-{{value}}">
          <input id="job-sourceType-{{value}}" type="radio" name="sourceType" value="{{value}}" {{#isChecked}}checked{{/isChecked}} >
          {{label}}
        </label>
        {{/sourceTypeOptions}}
      </fieldset>

      <div id="job-sourceUrl-group" class="form-group {{#isSourceUrlHidden}}js-hidden{{/isSourceUrlHidden}}">
        <label class="form-label" for="job-sourceUrl">What website?</label>
        <input class="form-control" id="job-sourceUrl" type="text" name="sourceUrl" value="{{sourceUrl}}">
      </div>

      <div class="form-group">
        <label class="form-label" for="job-deadline">What is the deadline?</label>
        <input class="form-control datepicker" id="job-deadline" type="text" name="deadline" value="{{deadline}}" placeholder="dd/mm/yyyy">
      </div>

      <fieldset class="star-rating form-group">
        <legend>How interested in the role are you?</legend>
        <div class="rating-options-group">
          {{#ratingOptions}}
            <input type="radio" id="job-rating-{{value}}" name="rating" value="{{value}}"
                   {{#isChecked}}checked{{/isChecked}} >
            <label class="full" for="job-rating-{{value}}"></label>
          {{/ratingOptions}}
        </div>
      </fieldset>

      <div class="form-group">
        <input type="submit" class="button" value="Save">
      </div>
    </form>

    <p><a href="/" class="link-back">Back</a></p>

  {{/applicationContent}}

{{/layout}}
